@model IEnumerable<LHP.Web.ViewModels.RoomListVm>

@{
    ViewBag.Title = "Oversigt";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="data" class="table table-responsive table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomNb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomAmount)
            </th>
            <th></th>
        </tr>   
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td class="col-md-1">
                @Html.DisplayFor(modelItem => item.RoomNb)
            </td>
            <td class="col-md-1">
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td class="col-md-3">
                @Html.DisplayFor(modelItem => item.RoomerName)
            </td>
            <td class="col-md-1 text-right">
                @Html.DisplayFor(modelItem => item.RoomAmount)
            </td>
            <td class="col-md-3">
                @Html.DisplayFor(modelItem => item.RoomType)
            </td>
            <td class="col-md-3 text-right">
                @Html.ActionLink("rediger", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" }) |
                @Html.ActionLink("Vis", "Details", new { id = item.Id}, new {@class = "btn btn-info btn-sm" }) |
                @Html.ActionLink("Slet", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }
    </tbody>
    

</table>
